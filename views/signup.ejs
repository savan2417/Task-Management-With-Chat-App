<!DOCTYPE html>
<html lang="en">

<head>
  <%- include("./partials/head") %>
    <title>SignupPage</title>
    <link href="../uploads/style.css" rel="stylesheet">
</head>

<body>
  <%- include("./partials/nav") %>

    <div class="container  signup-main">
      <div class="row">
        <div class="col-md-7 col-lg-6 col-xl-4 col-sm-10 col-11  mx-auto border-signup p-3">

          <form action="/user/signup" method="post" id="form">
            <h1 class="text-center mb-4 signup-heading">Signup Form</h1>
            <div class="mb-3">
              <label for="fullName" class="form-label">Full Name</label>
              <input type="text" class="form-control" name="fullName" id="fullName" aria-describedby="emailHelp">

            </div>
            <div class="mb-3">
              <label for="email" class="form-label">Email address</label>
              <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp">
              <div id="emailHelp" class="form-text text-white">We'll never share your email with anyone else.</div>
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input type="password" class="form-control" id="password" name="password">
            </div>

            <button type="submit" class="btn">Submit</button>
          </form>


        </div>
      </div>
    </div>

    <%- include("./partials/footer") %>
      <%- include("./partials/script") %>
</body>

</html>